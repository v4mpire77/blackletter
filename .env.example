# Blackletter GDPR Processor - Environment Configuration
# Copy to .env and configure your values

# Supabase Configuration (Cloud - No Local PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# FastAPI Configuration
SECRET_KEY=your-secret-key-for-jwt-signing
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENVIRONMENT=development

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# LLM Configuration (Optional for MVP)
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
OPENAI_API_KEY=your-openai-key-here

# Application Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,txt,docx
JOB_TIMEOUT_SECONDS=300

# Context Engineering Framework
FRAMEWORK_COMPLIANCE_REQUIRED=80
VALIDATION_ENABLED=true

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Testing
TESTING=false