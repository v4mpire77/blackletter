# Qoder IDE Agent Configuration
# This file configures how agents behave in Qoder IDE for the Blackletter Systems project

[agent_rules]
# Mandatory Context Engineering workflow enforcement
enforce_context_engineering = true
require_workflow_structure = true
minimum_compliance_score = 80

# Required response sections (agents must include all)
required_sections = [
    "Context Assessment",
    "Implementation Plan", 
    "Implementation",
    "Documentation",
    "Verification"
]

# Required documentation files to review
required_documentation = [
    "docs/Implementation.md",
    "docs/project_structure.md", 
    "docs/UI_UX_doc.md",
    "docs/Bug_tracking.md"
]

# Context Engineering tools integration
validation_tool = "tools/context_engineering_validator.py"
automation_tool = "tools/context_engineering_automation.py"
powershell_tool = "tools/context_engineering.ps1"

[security_rules]
# Security enforcement
block_hardcoded_secrets = true
require_environment_variables = true
enforce_https_only = true
block_sensitive_data_logging = true

[quality_standards]
# Code quality requirements
minimum_test_coverage = 80
require_unit_tests = true
require_integration_tests = true
require_docstrings = true
enforce_pep8 = true
require_typescript = true

[legal_compliance]
# Legal technology specific rules
block_definitive_legal_advice = true
require_ai_disclaimers = true
require_confidence_scores = true
enforce_gdpr_compliance = true
require_audit_logging = true

[workflow_enforcement]
# How to handle non-compliance
rejection_threshold = 60
warning_threshold = 80
require_revision_below_threshold = true
escalate_repeated_violations = true

[project_specific]
# Blackletter Systems specific settings
legal_technology_platform = true
sensitive_document_handling = true
professional_standards_required = true
api_response_timeout_seconds = 30
max_file_upload_mb = 10